{
  "name": "gulpfile.js",
  "version": "3.0.0",
  "description": "Because I spent too much time redoing my gulp tasks.",
  "license": "MIT",
  "engines": {
    "node": ">=10.14.8"
  },
  "homepage": "https://github.com/cyrale/gulpfile.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/cyrale/gulpfile.js.git"
  },
  "main": "dist/app.js",
  "bin": {
    "gulpfile.js": "bin/gulpfile.js.js"
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc",
    "watch": "tsc -w",
    "test": "npx gulp --gulpfile dist/app.js --configfile test/gulpconfig.yml",
    "lint": "tslint \"src/**/*.ts?(x)\"",
    "pretty": "prettier --write \"src/**/*.ts?(x)\""
  },
  "dependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "@types/autoprefixer": "^9.5.0",
    "@types/browser-sync": "^2.26.0",
    "@types/cssnano": "^4.0.0",
    "@types/gulp": "^4.0.6",
    "@types/gulp-if": "0.0.33",
    "@types/gulp-plumber": "0.0.32",
    "@types/gulp-postcss": "^8.0.0",
    "@types/gulp-pug": "^3.3.1",
    "@types/gulp-rename": "0.0.33",
    "@types/gulp-sass": "^4.0.0",
    "@types/js-yaml": "^3.12.1",
    "@types/lodash": "^4.14.136",
    "@types/merge-stream": "^1.1.2",
    "@types/minimist": "^1.2.0",
    "@types/node": "^10.14.12",
    "@types/through2": "^2.0.34",
    "autoprefixer": "^9.6.1",
    "browser-sync": "^2.26.7",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.10",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-critical-css": "^1.0.1",
    "gulp-data": "^1.3.1",
    "gulp-eslint": "^6.0.0",
    "gulp-extract-media-queries": "^1.1.0",
    "gulp-if": "^2.0.2",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-pug": "^4.0.1",
    "gulp-pug-linter": "^1.2.0",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "^4.0.2",
    "gulp-sass-lint": "^1.4.0",
    "gulp-uglify": "^3.0.2",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.14",
    "merge-stream": "^2.0.0",
    "minimist": "^1.2.0",
    "postcss-assets": "^5.0.0",
    "postcss-inline-svg": "^4.1.0",
    "postcss-svgo": "^4.0.2",
    "puglint-stylish": "^1.0.1",
    "purgecss-with-wordpress": "^1.0.0",
    "rucksack-css": "^1.0.2",
    "sass-lint": "^1.13.1",
    "sort-css-media-queries": "^1.4.3",
    "source-map-support": "^0.5.12",
    "through2": "^3.0.1"
  },
  "devDependencies": {
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^2.7.0",
    "lint-staged": "^8.2.1",
    "prettier": "^1.18.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts?(x)": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
