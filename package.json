{
  "name": "gulpfile.js",
  "version": "3.0.0",
  "description": "Because I spent too much time redoing my gulp tasks.",
  "license": "MIT",
  "engines": {
    "node": ">=10.14.8"
  },
  "homepage": "https://github.com/cyrale/gulpfile.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/cyrale/gulpfile.js.git"
  },
  "main": "dist/app.js",
  "bin": {
    "gulpfile.js": "bin/gulpfile.js.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "npx gulp --gulpfile dist/app.js --configfile test/gulpconfig.yml",
    "lint": "tslint \"src/**/*.ts?(x)\"",
    "pretty": "prettier --write \"src/**/*.ts?(x)\""
  },
  "dependencies": {
    "@types/gulp": "^4.0.6",
    "@types/gulp-if": "0.0.33",
    "@types/gulp-plumber": "0.0.32",
    "@types/gulp-pug": "^3.3.1",
    "@types/js-yaml": "^3.12.1",
    "@types/lodash": "^4.14.136",
    "@types/minimist": "^1.2.0",
    "@types/node": "^10.14.12",
    "gulp": "^4.0.2",
    "gulp-data": "^1.3.1",
    "gulp-if": "^2.0.2",
    "gulp-plumber": "^1.2.1",
    "gulp-pug": "^4.0.1",
    "gulp-pug-linter": "^1.2.0",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.14",
    "minimist": "^1.2.0",
    "puglint-stylish": "^1.0.1",
    "source-map-support": "^0.5.12"
  },
  "devDependencies": {
    "husky": "^2.7.0",
    "lint-staged": "^8.2.1",
    "prettier": "^1.18.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts?(x)": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
